{
  "name": "remove-bom-buffer",
  "description": "Remove a byte order mark (BOM) from a buffer.",
  "version": "3.0.0",
  "homepage": "https://github.com/jonschlinkert/remove-bom-buffer",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "jonschlinkert/remove-bom-buffer",
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "dependencies": {
    "is-buffer": "^1.1.5",
    "is-utf8": "^0.2.1"
  },
  "devDependencies": {
    "gulp-format-md": "^0.1.11",
    "mocha": "^3.2.0"
  },
  "verb": {
    "related": {
      "list": [
        "cr",
        "has-bom",
        "read-file",
        "strip-bom-string"
      ]
    },
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "lint": {
      "reflinks": true
    }
  }
}