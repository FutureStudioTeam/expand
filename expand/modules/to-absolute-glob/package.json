{
  "name": "to-absolute-glob",
  "description": "Make a glob pattern absolute, ensuring that negative globs and patterns with trailing slashes are correctly handled.",
  "version": "2.0.2",
  "homepage": "https://github.com/jonschlinkert/to-absolute-glob",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "jonschlinkert/to-absolute-glob",
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "dependencies": {
    "is-absolute": "^1.0.0",
    "is-negated-glob": "^1.0.0"
  },
  "devDependencies": {
    "gulp-format-md": "^0.1.11",
    "mocha": "^3.0.2"
  },
  "verb": {
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "lint": {
      "reflinks": true
    },
    "related": {
      "list": [
        "has-glob",
        "is-glob",
        "is-valid-glob"
      ]
    },
    "reflinks": [
      "verb",
      "verb-generate-readme"
    ]
  }
}